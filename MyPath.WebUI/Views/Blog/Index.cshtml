
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


<body>
    <main class="main">
	    <div class="container gutter-top gutter-bottom">
		    <div class="row sticky-parent">
			    <!-- Sidebar -->
				@await Component.InvokeAsync("_AuthorSideBarComponentPartial")
		        
				<!-- Content -->
		        <div class="col-12 col-md-12 col-xl-9">
				    <div class="box-outer pb-0">
					    <!-- Menu -->
						@await Component.InvokeAsync("_MenuComponentPartial")
						
					    <!-- About -->
						<div class="pb-0 pb-sm-2">
		                    <h1 class="title title--h1 title__separate">Blog</h1>
					    </div>

						<!-- News -->
						<div class="news-grid">
							<!-- Post -->
							<article class="news-item box">
							    <div class="news-item__image-wrap">
									<a class="news-item__link" href="single-post.html"></a>
									<img class="cover lazyload" src="~/Template/assets/images/433x240.jpg" alt="" />
								</div>
								<div class="news-item__caption">
									<div class="news-item__date"><span>Design</span>Sep 16, 2021</div>
								    <h2 class="title title--h2"><a href="single-post.html">Design Conferences in 2019</a></h2>
									<p>Veritatis et quasi architecto beatae vitae dicta sunt, explicabo.</p>
								</div>
							</article>

							
						</div><!-- /news-grid -->
					</div><!-- /box-outer -->
		        </div><!-- /col -->
			</div><!-- /sticky -->
		</div><!-- /container -->
    </main>

    <div class="back-to-top"></div>

	<!-- JavaScripts -->
	

</body>